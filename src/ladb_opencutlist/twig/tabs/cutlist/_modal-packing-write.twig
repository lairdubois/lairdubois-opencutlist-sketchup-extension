{% extends 'core/_modal.twig' %}

{% set id = 'ladb_cutlist_modal_packing_export' %}
{% set title = ('tab.cutlist.packing.write.title'|i18next)~'<small class="ladb-horizontal-left-separator">'~group.material_name|escape('html')~' / '~group.std_dimension~'</small>' %}

{% block headerToolsInner %}
    {% include 'components/_widget-preset.twig' %}
    <button class="btn btn-default btn-xs" data-help-page="cutlist.cuttingdiagram2d.write"><i class="ladb-opencutlist-icon-help"></i> {{ 'default.help'|i18next }}</button>
{% endblock %}

{% block bodyInner %}
    <div class="tab-content">
        {% if isBinSelection %}
            <div class="alert alert-info text-center">{{ 'tab.cutlist.packing.write.warning.is_bin_selection'|i18next }}</div>
        {% endif %}
        <div class="row">
            <div class="col-xs-push-1 col-xs-10">
                {{ 'tab.cutlist.packing.write.info_0'|i18next }}
            </div>
        </div>
        <hr>
        <div class="form form-horizontal" style="margin-top: 15px;">
            <div class="form-group">
                <div class="ladb-minitools ladb-minitools-right ladb-minitools-lgw"><a tabindex="-1" data-toggle="popover" data-trigger="hover" data-placement="left" title="{{ 'default.help'|i18next }}" data-content="{{ 'tab.cutlist.packing.write.option_file_format_help'|i18next }}"><i class="ladb-opencutlist-icon-help"></i></a></div>
                <label class="control-label col-xs-3">{{ ('tab.cutlist.packing.write.option_file_format')|i18next }}</label>
                <div class="col-xs-8">
                    <select class="form-control" id="ladb_select_file_format">
                        <option value="svg" data-content="SVG"></option>
                        <option value="dxf" data-content="DXF"></option>
                    </select>
                </div>
            </div>
            <div class="form-group" id="ladb_form_group_dxf_structure">
                <div class="ladb-minitools ladb-minitools-right ladb-minitools-lgw"><a tabindex="-1" data-toggle="popover" data-trigger="hover" data-placement="left" title="{{ 'default.help'|i18next }}" data-content="{{ 'tab.cutlist.packing.write.option_dxf_structure_help'|i18next }}"><i class="ladb-opencutlist-icon-help"></i></a></div>
                <label class="control-label col-xs-3">{{ ('tab.cutlist.packing.write.option_dxf_structure')|i18next }}</label>
                <div class="col-xs-8">
                    <select class="form-control" id="ladb_select_dxf_structure">
                        <option value="1" data-content="{{ ('tab.cutlist.packing.write.option_dxf_structure_1')|i18next }}"></option>
                        <option value="2" data-content="{{ ('tab.cutlist.packing.write.option_dxf_structure_2')|i18next }}"></option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="ladb-minitools ladb-minitools-right ladb-minitools-lgw"><a tabindex="-1" data-toggle="popover" data-trigger="hover" data-placement="left" title="{{ 'default.help'|i18next }}" data-content="{{ 'tab.cutlist.packing.write.option_unit_help'|i18next }}"><i class="ladb-opencutlist-icon-help"></i></a></div>
                <label class="control-label col-xs-3">{{ ('tab.cutlist.packing.write.option_unit')|i18next }}</label>
                <div class="col-xs-8">
                    <select class="form-control" id="ladb_select_unit">
                        <option value="2" data-content="{{ 'default.unit_2'|i18next }}"></option>
                        <option value="3" data-content="{{ 'default.unit_3'|i18next }}"></option>
                        <option value="4" data-content="{{ 'default.unit_4'|i18next }}"></option>
                        <option value="0" data-content="{{ 'default.unit_0'|i18next }}"></option>
                        <option value="1" data-content="{{ 'default.unit_1'|i18next }}"></option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="ladb-minitools ladb-minitools-right ladb-minitools-lgw"><a tabindex="-1" data-toggle="popover" data-trigger="hover" data-placement="left" title="{{ 'default.help'|i18next }}" data-content="{{ 'tab.cutlist.packing.write.option_smoothing_help'|i18next }}"><i class="ladb-opencutlist-icon-help"></i></a></div>
                <label class="control-label col-xs-3">{{ ('tab.cutlist.packing.write.option_smoothing')|i18next }}</label>
                <div class="col-xs-8">
                    <select class="form-control" id="ladb_select_smoothing">
                        <option value="0" data-content="{{ 'tab.cutlist.packing.write.option_smoothing_0'|i18next }}"></option>
                        <option value="1" data-content="{{ 'tab.cutlist.packing.write.option_smoothing_1'|i18next }}"></option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="ladb-minitools ladb-minitools-right ladb-minitools-lgw"><a tabindex="-1" data-toggle="popover" data-trigger="hover" data-placement="left" title="{{ 'default.help'|i18next }}" data-content="{{ 'tab.cutlist.packing.write.option_merge_holes_help'|i18next }}"><i class="ladb-opencutlist-icon-help"></i></a></div>
                <label class="control-label col-xs-3">{{ ('tab.cutlist.packing.write.option_merge_holes')|i18next }}</label>
                <div class="col-xs-8">
                    <select class="form-control" id="ladb_select_merge_holes">
                        <option value="0" data-content="{{ 'tab.cutlist.packing.write.option_merge_holes_0'|i18next }}"></option>
                        <option value="1" data-content="{{ 'tab.cutlist.packing.write.option_merge_holes_1'|i18next }}"></option>
                    </select>
                </div>
            </div>
            <div class="form-group" id="ladb_form_group_merge_holes_offset">
                <div class="ladb-minitools ladb-minitools-right ladb-minitools-lgw"><a tabindex="-1" data-toggle="popover" data-trigger="hover" data-placement="left" title="{{ 'default.help'|i18next }}" data-content="{{ 'tab.cutlist.packing.write.option_merge_holes_offset_help'|i18next }}"><i class="ladb-opencutlist-icon-help"></i></a></div>
                <label class="control-label col-xs-3">{{ 'tab.cutlist.write.option_merge_holes_offset'|i18next }}</label>
                <div class="col-xs-8">
                    <input type="text" class="form-control" id="ladb_input_merge_holes_offset">
                </div>
            </div>
            <div class="form-group">
                <div class="ladb-minitools ladb-minitools-right ladb-minitools-lgw"><a tabindex="-1" data-toggle="popover" data-trigger="hover" data-placement="left" title="{{ 'default.help'|i18next }}" data-content="{{ 'tab.cutlist.packing.write.option_include_paths_help'|i18next }}"><i class="ladb-opencutlist-icon-help"></i></a></div>
                <label class="control-label col-xs-3">{{ ('tab.cutlist.packing.write.option_include_paths')|i18next }}</label>
                <div class="col-xs-8">
                    <select class="form-control" id="ladb_select_include_paths">
                        <option value="0" data-content="{{ 'tab.cutlist.packing.write.option_include_paths_0'|i18next }}"></option>
                        <option value="1" data-content="{{ 'tab.cutlist.packing.write.option_include_paths_1'|i18next }}"></option>
                    </select>
                </div>
            </div>
            <hr>
            <div class="form-group">
                <div class="col-xs-3"></div>
                <label class="col-xs-4 text-center"><i class="ladb-opencutlist-icon-stroke"></i> {{ 'default.stroke_color'|i18next }}</label>
                <label class="col-xs-4 text-center ladb-form-fill-color"><i class="ladb-opencutlist-icon-fill"></i> {{ 'default.fill_color'|i18next }}</label>
            </div>
            <div class="form-group">
                <div class="ladb-minitools ladb-minitools-right ladb-minitools-lgw"><a tabindex="-1" data-toggle="popover" data-trigger="hover" data-placement="left" title="{{ 'default.help'|i18next }}" data-content="{{ ('tab.cutlist.packing.write.option_bin_'~group.material_type_strippedname~'_help')|i18next }}"><i class="ladb-opencutlist-icon-help"></i></a></div>
                <div class="col-xs-3">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="ladb_input_bin_hidden">{{ ('tab.cutlist.packing.write.option_bin_'~group.material_type_strippedname)|i18next }}
                        </label>
                    </div>
                </div>
                <div class="col-xs-4">
                    <input id="ladb_input_bin_stroke_color" class="form-control"/>
                </div>
                <div class="col-xs-4 ladb-form-fill-color">
                    <input id="ladb_input_bin_fill_color" class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <div class="ladb-minitools ladb-minitools-right ladb-minitools-lgw"><a tabindex="-1" data-toggle="popover" data-trigger="hover" data-placement="left" title="{{ 'default.help'|i18next }}" data-content="{{ 'tab.cutlist.packing.write.option_parts_help'|i18next }}"><i class="ladb-opencutlist-icon-help"></i></a></div>
                <div class="col-xs-3">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="ladb_input_parts_hidden">{{ 'tab.cutlist.packing.write.option_parts'|i18next }}
                        </label>
                    </div>
                </div>
                <div class="col-xs-4">
                    <input id="ladb_input_parts_stroke_color" class="form-control"/>
                </div>
                <div class="col-xs-4 ladb-form-fill-color">
                    <input id="ladb_input_parts_fill_color" class="form-control"/>
                </div>
            </div>
            <div class="form-group" id="ladb_form_group_parts_holes">
                <div class="ladb-minitools ladb-minitools-right ladb-minitools-lgw"><a tabindex="-1" data-toggle="popover" data-trigger="hover" data-placement="left" title="{{ 'default.help'|i18next }}" data-content="{{ 'tab.cutlist.packing.write.option_parts_holes_help'|i18next }}"><i class="ladb-opencutlist-icon-help"></i></a></div>
                <div class="col-xs-3">
                    <div class="checkbox" style="margin-left: 10px;">
                        <label>
                            <input type="checkbox" checked disabled>{{ 'tab.cutlist.packing.write.option_parts_holes'|i18next }}
                        </label>
                    </div>
                </div>
                <div class="col-xs-4">
                    <input id="ladb_input_parts_holes_stroke_color" class="form-control"/>
                </div>
                <div class="col-xs-4 ladb-form-fill-color">
                    <input id="ladb_input_parts_holes_fill_color" class="form-control"/>
                </div>
            </div>
            <div class="form-group" id="ladb_form_group_parts_paths">
                <div class="ladb-minitools ladb-minitools-right ladb-minitools-lgw"><a tabindex="-1" data-toggle="popover" data-trigger="hover" data-placement="left" title="{{ 'default.help'|i18next }}" data-content="{{ 'tab.cutlist.packing.write.option_parts_paths_help'|i18next }}"><i class="ladb-opencutlist-icon-help"></i></a></div>
                <div class="col-xs-3">
                    <div class="checkbox" style="margin-left: 10px;">
                        <label>
                            <input type="checkbox" checked disabled>{{ 'tab.cutlist.packing.write.option_parts_paths'|i18next }}
                        </label>
                    </div>
                </div>
                <div class="col-xs-4">
                    <input id="ladb_input_parts_paths_stroke_color" class="form-control"/>
                </div>
                <div class="col-xs-4">
                    <input id="ladb_input_parts_paths_fill_color" class="form-control"/>
                </div>
            </div>
            <div class="form-group" id="ladb_form_group_texts">
                <div class="ladb-minitools ladb-minitools-right ladb-minitools-lgw"><a tabindex="-1" data-toggle="popover" data-trigger="hover" data-placement="left" title="{{ 'default.help'|i18next }}" data-content="{{ 'tab.cutlist.packing.write.option_texts_help'|i18next }}"><i class="ladb-opencutlist-icon-help"></i></a></div>
                <div class="col-xs-3">
                    <div class="checkbox" style="margin-left: 10px;">
                        <label>
                            <input type="checkbox" id="ladb_input_texts_hidden">{{ 'tab.cutlist.packing.write.option_texts'|i18next }}
                        </label>
                    </div>
                </div>
                <div class="col-xs-4">
                    <input id="ladb_input_texts_color" class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <div class="ladb-minitools ladb-minitools-right ladb-minitools-lgw"><a tabindex="-1" data-toggle="popover" data-trigger="hover" data-placement="left" title="{{ 'default.help'|i18next }}" data-content="{{ 'tab.cutlist.packing.write.option_leftovers_help'|i18next }}"><i class="ladb-opencutlist-icon-help"></i></a></div>
                <div class="col-xs-3">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="ladb_input_leftovers_hidden">{{ 'tab.cutlist.packing.write.option_leftovers'|i18next }}
                        </label>
                    </div>
                </div>
                <div class="col-xs-4">
                    <input id="ladb_input_leftovers_stroke_color" class="form-control"/>
                </div>
                <div class="col-xs-4 ladb-form-fill-color">
                    <input id="ladb_input_leftovers_fill_color" class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <div class="ladb-minitools ladb-minitools-right ladb-minitools-lgw"><a tabindex="-1" data-toggle="popover" data-trigger="hover" data-placement="left" title="{{ 'default.help'|i18next }}" data-content="{{ 'tab.cutlist.packing.write.option_cuts_help'|i18next }}"><i class="ladb-opencutlist-icon-help"></i></a></div>
                <div class="col-xs-3">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="ladb_input_cuts_hidden">{{ 'tab.cutlist.packing.write.option_cuts'|i18next }}
                        </label>
                    </div>
                </div>
                <div class="col-xs-4">
                    <input id="ladb_input_cuts_color" class="form-control"/>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block footerRightInner %}
    <button class="btn btn-default" data-dismiss="modal">{{ 'default.cancel'|i18next }}</button>
    <button class="btn btn-primary btn-validate-modal" id="ladb_btn_export">{{ 'default.export'|i18next }} <i class="ladb-opencutlist-icon-arrow-right"></i> <span id="ladb_btn_export_file_format"></span></button>
{% endblock %}
