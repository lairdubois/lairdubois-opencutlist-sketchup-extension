{% extends 'core/_modal.twig' %}

{% set id = 'ladb_cutlist_modal_write_3d' %}
{% set title = ('tab.cutlist.write.title'|i18next)~'<small class="ladb-horizontal-left-separator">3D</small>' %}

{% block headerToolsInner %}
    {% include 'components/_widget-preset.twig' %}
    <button class="btn btn-default btn-xs" data-help-page="cutlist.write3d"><i class="ladb-opencutlist-icon-help"></i> {{ 'default.help'|i18next }}</button>
{% endblock %}

{% block bodyInner %}
    <div class="tab-content">
        {% if isGroupSelection %}
            <div class="alert alert-info text-center">{{ 'tab.cutlist.write.warning.is_group_selection'|i18next }}</div>
        {% endif %}
        {% if isPartSelection %}
            <div class="alert alert-info text-center">{{ 'tab.cutlist.write.warning.is_part_selection'|i18next }}</div>
        {% endif %}
        <div class="row">
            <div class="col-xs-push-1 col-xs-10">
                {{ 'tab.cutlist.write.info_3d'|i18next }}
            </div>
        </div>
        <hr>
        <div class="form form-horizontal" style="margin-top: 15px;">
            <div class="form-group">
                <div class="ladb-minitools ladb-minitools-right ladb-minitools-lgw"><a tabindex="-1" data-toggle="popover" data-trigger="hover" data-placement="left" title="{{ 'default.help'|i18next }}" data-content="{{ 'tab.cutlist.write.option_file_format_help'|i18next }}"><i class="ladb-opencutlist-icon-help"></i></a></div>
                <label class="control-label col-xs-3">{{ ('tab.cutlist.write.option_file_format')|i18next }}</label>
                <div class="col-xs-8">
                    <select class="form-control" id="ladb_select_file_format">
                        <option value="stl" data-content="STL"></option>
                        <option value="obj" data-content="OBJ"></option>
                        <option value="skp" data-content="SKP"></option>
                    </select>
                </div>
            </div>
            <div class="form-group" id="ladb_form_group_unit">
                <div class="ladb-minitools ladb-minitools-right ladb-minitools-lgw"><a tabindex="-1" data-toggle="popover" data-trigger="hover" data-placement="left" title="{{ 'default.help'|i18next }}" data-content="{{ 'tab.cutlist.write.option_unit_help'|i18next }}"><i class="ladb-opencutlist-icon-help"></i></a></div>
                <label class="control-label col-xs-3">{{ ('tab.cutlist.write.option_unit')|i18next }}</label>
                <div class="col-xs-8">
                    <select class="form-control" id="ladb_select_unit">
                        <option value="2" data-content="{{ 'default.unit_2'|i18next }}"></option>
                        <option value="3" data-content="{{ 'default.unit_3'|i18next }}"></option>
                        <option value="4" data-content="{{ 'default.unit_4'|i18next }}"></option>
                        <option value="0" data-content="{{ 'default.unit_0'|i18next }}"></option>
                        <option value="1" data-content="{{ 'default.unit_1'|i18next }}"></option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="ladb-minitools ladb-minitools-right ladb-minitools-lgw"><a tabindex="-1" data-toggle="popover" data-trigger="hover" data-placement="left" title="{{ 'default.help'|i18next }}" data-content="{{ 'tab.cutlist.write.option_use_count_help'|i18next }}"><i class="ladb-opencutlist-icon-help"></i></a></div>
                <label class="control-label col-xs-3">{{ ('tab.cutlist.write.option_use_count')|i18next }}</label>
                <div class="col-xs-8">
                    <select class="form-control" id="ladb_select_use_count">
                        <option value="0" data-content="{{ 'tab.cutlist.write.option_use_count_0'|i18next }}"></option>
                        <option value="1" data-content="{{ 'tab.cutlist.write.option_use_count_1'|i18next }}"></option>
                    </select>
                </div>
            </div>
            <div class="form-group" id="ladb_form_group_anchor">
                <div class="ladb-minitools ladb-minitools-right ladb-minitools-lgw"><a tabindex="-1" data-toggle="popover" data-trigger="hover" data-placement="left" title="{{ 'default.help'|i18next }}" data-content="{{ 'tab.cutlist.write.option_anchor_help'|i18next }}"><i class="ladb-opencutlist-icon-help"></i></a></div>
                <label class="control-label col-xs-3">{{ ('tab.cutlist.write.option_anchor')|i18next }}</label>
                <div class="col-xs-8">
                    <select class="form-control" id="ladb_select_anchor">
                        <option value="0" data-content="{{ 'tab.cutlist.write.option_anchor_0'|i18next }}"></option>
                        <option value="1" data-content="{{ 'tab.cutlist.write.option_anchor_1'|i18next }}"></option>
                    </select>
                </div>
            </div>
            <div class="form-group" id="ladb_form_group_switch_yz">
                <div class="ladb-minitools ladb-minitools-right ladb-minitools-lgw"><a tabindex="-1" data-toggle="popover" data-trigger="hover" data-placement="left" title="{{ 'default.help'|i18next }}" data-content="{{ 'tab.cutlist.write.option_switch_yz_help'|i18next }}"><i class="ladb-opencutlist-icon-help"></i></a></div>
                <label class="control-label col-xs-3">{{ ('tab.cutlist.write.option_switch_yz')|i18next }}</label>
                <div class="col-xs-8">
                    <select class="form-control" id="ladb_select_switch_yz">
                        <option value="0" data-content="{{ 'tab.cutlist.write.option_switch_yz_0'|i18next }}"></option>
                        <option value="1" data-content="{{ 'tab.cutlist.write.option_switch_yz_1'|i18next }}"></option>
                    </select>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block footerRightInner %}
    <button class="btn btn-default" data-dismiss="modal">{{ 'default.cancel'|i18next }}</button>
    <button class="btn btn-primary btn-validate-modal" id="ladb_btn_export">{{ 'default.export'|i18next }} <i class="ladb-opencutlist-icon-arrow-right"></i> <span id="ladb_btn_export_file_format"></span></button>
{% endblock %}
